<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="blacksmith.sullivanway">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="false"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/sullivanway_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/sullivanway_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:allowBackup">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".ui.stationdetail.StationDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".tempactivity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".tempactivity.StnInfoPagerActivity"
            android:parentActivityName=".tempactivity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tempactivity.ExpandedNaverMapActivity"
            android:parentActivityName=".tempactivity.StnInfoPagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tempactivity.RouteGuidancePagerActivity"
            android:parentActivityName=".tempactivity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tempactivity.TransferMapListActivity"
            android:parentActivityName=".tempactivity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tempactivity.TransferMapPagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tempactivity.FavoriteRouteActivity"
            android:parentActivityName=".tempactivity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tempactivity.CongestionGraphActivity"
            android:parentActivityName=".tempactivity.RouteGuidancePagerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".tempactivity.TimeTablePagerActivity"
            android:parentActivityName=".tempactivity.StnInfoPagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tempactivity.SettingsActivity"
            android:label="@string/trans_stn_setting_title"
            android:parentActivityName=".tempactivity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar" />

        <service android:name=".service.CloudMessagingService"
            android:permission="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".service.AlarmReceiver" />

        <activity
            android:name=".dialog.AlarmDialogActivity"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name=".dialog.CloudMessageDialogActivity"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>